@model MyBI_Identity.Models.EmpresaViewModels
@{
    /**/

    Layout = "~/Views/Shared/_LayoutAreaCliente.cshtml";
}
@using (Html.BeginForm("", "", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    @*<form>*@
    <div class="form-row">
        <div class="form-group col-md-6">
            @*<label for="inputEmail4" class="col-form-label">Razão Social</label>*@
            @*<input type="text" class="form-control" id="inputEmail4" placeholder="Razão Social">*@
            @Html.LabelFor(r => r.sRazaoSocial, new { @class = "col-form-label" })
            @Html.TextBoxFor(r => r.sRazaoSocial, new { @class = "form-control", @id = "inputEmail4", placeholder = "Razão Social" })

        </div>
        <div class="form-group col-md-6">
            @*<label for="inputPass'word4" class="col-form-label">CNPJ/CPF</label>
            <input type="text" class="form-control" name="idDocument" id="idDocument">*@
            @Html.LabelFor(c => c.sCnpjCpf, new { @class = "col-form-label" })
            @Html.TextBoxFor(c => c.sCnpjCpf, new { @class = "form-control", @id = "inputEmail4", placeholder =  "CNPJ/CPF" })

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @*<label for="inputAddress2" class="col-form-label">Endereço</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Rua,Numero, Bairro">*@
            @Html.LabelFor(c => c.sEndereco, new { @class = "col-form-label" })
            @Html.TextBoxFor(c => c.sEndereco, new { @class = "form-control", @id = "inputAddress2", placeholder = "Endereço" })
        </div>
        <div class="form-group col-md-4">
            @*<label for="inputCity" class="col-form-label">Cidade</label>
            <input type="text" class="form-control" id="inputCity" placeholder="Cidade">*@
            @Html.LabelFor(c => c.sCidade, new { @class = "col-form-label" })
            @Html.TextBoxFor(c => c.sCidade, new { @class = "form-control", @id = "inputCity", placeholder = "Cidade" })
        </div>
        <div class="form-group col-md-2">
            <label for="inputState" class="col-form-label">Estado</label>
            <select id="inputState" class="form-control">
                <option selected>Selecione...</option>
                <option>SP</option>
                <option>RJ</option>
                <option>MG</option>
                <option>SC</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @*<label for="inputAddress" class="col-form-label">Contato</label>
            <input type="tel" class="form-control" name="" id="idNumberPhone" placeholder="Telefone de Contato">*@
            @Html.LabelFor(c => c.nContato, new { @class = "col-form-label" })
            @Html.TextBoxFor(c => c.nContato, new { @class = "form-control", @id = "idNumberPhone", placeholder = "Telefone de Contato" })
        </div>
        <div class="form-group col-md-6 mt-md-2">
            @*<label for="inputZip">CEP</label>
            <input type="text" class="form-control" placeholder="CEP" name="CEP" id="idCEP">*@
            @Html.LabelFor(c => c.sCep, new { @class = "col-form-label" })
            @Html.TextBoxFor(c => c.sCep, new { @class = "form-control", @id = "idCEP", placeholder = "CEP" })
        </div>

    </div>
    <div class="form-inline">
        <!-- RADIOS -->
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="idCorrente" value="option1">
            <label class="form-check-label" for="inlineRadio1">Corrente</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="idCapital" value="option2">
            <label class="form-check-label" for="inlineRadio2">Capital</label>
        </div>
    </div>
    <!-- Mensal -->
    <div class="form-group mt-md-3 " id="month">
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Qtde Parcelas:</label>
        <select class="custom-select my-1 mr-sm-2 removeWithform" id="inlineFormCustomSelectPref">
            <option selected>Selecione...</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="3">4</option>
            <option value="3">5</option>
            <option value="3">6</option>
            <option value="3">7</option>
            <option value="3">8</option>
            <option value="3">9</option>
            <option value="3">10</option>
            <option value="3">11</option>
            <option value="3">12</option>
            <option value="3">24</option>
            <option value="3">36</option>
        </select>
    </div>
    <div class="form-group mt-md-3">
        @*<label for="inputEmail4" class="col-form-label">Mensalidade Aproximado(a): &nbsp;</label>
        <input type="text" class="form-control removeWithform" id="idValueMensal">*@
        @Html.LabelFor(c => c.nValorAproximado, new { @class = "col-form-label" })&nbsp;
        @Html.TextBoxFor(c => c.nValorAproximado, new { @class = "form-control removeWithform", @id = "idValueMensal", placeholder = "R$ 0,00" })
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Cadastrar</button>
    @*</form>*@

    @*<script src="~/Scripts/areaclienteDefault.js"></script>*@
}