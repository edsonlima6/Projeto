@{
    ViewBag.Title = "Contact";
}
@*<link href="~/Content/Login/Login.css" rel="stylesheet" />*@
@*@Styles.Render("~/Content/Login/LoginCss")*@  @*form-signin*@

@model  MyBI_MVC.Models.UsuarioVM
<div class="container" style="background-color:whitesmoke;">
    <br />
        <div class="form-row align-items-center">

        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new
        {
            @class = "form-signin", 
            role = "form"
        }))
        {
            @Html.AntiForgeryToken()
            <div class="alig-form">

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Digite seu Email", @id = "txtEmail" })

</div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </span>
                   
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Digite sua senha", @id = "txtSenha" })
                        @*@Html.ValidationMessageFor(m => m.Senha)*@

                    </div>
                </div>


            </div>
          
        }
    </div>
    </div>